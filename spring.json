{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Spring Boot ecosystem",
      "matchPackagePatterns": [
        "^org\\.springframework:",
        "^org\\.springframework\\.boot:",
        "^org\\.springframework\\.cloud:",
        "^org\\.springframework\\.security:"
      ],
      "matchManagers": ["maven"],
      "minimumReleaseAge": "3 days",
      "automerge": false,
      "labels": ["java", "spring"]
    },
    {
      "groupName": "Maven plugins",
      "matchPackageNames": [
        "org.apache.maven.plugins:maven-compiler-plugin",
        "org.apache.maven.plugins:maven-surefire-plugin",
        "org.apache.maven.plugins:maven-failsafe-plugin",
        "com.google.cloud.tools:jib-maven-plugin"
      ],
      "matchManagers": ["maven"],
      "automerge": false,
      "labels": ["java", "maven-plugin"]
    },
    {
      // No automerge for DB driver upgrades
      "matchManagers": ["maven"],
      "matchPackageNames": [
        "org.postgresql:postgresql",
        "mysql:mysql-connector-java",
        "com.mysql:mysql-connector-j",
        "org.mariadb.jdbc:mariadb-java-client",
        "com.oracle.database.jdbc:ojdbc8",
        "com.oracle.database.jdbc:ojdbc11"
      ],
      "automerge": false,
      "prPriority": 5,
      "labels": ["java", "critical", "db-driver"]
    },
    {
      // Keep Spring majors clearly highlighted (no grouping, no automerge)
      "matchManagers": ["maven"],
      "matchPackagePatterns": [
        "^org\\.springframework:",
        "^org\\.springframework\\.boot:",
        "^org\\.springframework\\.cloud:",
        "^org\\.springframework\\.security:"
      ],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "prPriority": -1,
      "labels": ["spring", "major-update"]
    }
  ]
}
