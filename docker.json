{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      // Keep digest-only bumps flowing (but never for runtime images; see last rule)
      "matchDatasources": ["docker"],
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["digest"],
      "excludePackageNames": [
        "postgres",
        "mysql",
        "mariadb",
        "mongo",
        "redis",
        "nginx",
        "rabbitmq"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      // Tooling images tend to be lower risk; allow patch automerge (never for runtime images; see last rule)
      "matchDatasources": ["docker"],
      "matchManagers": ["dockerfile"],
      "matchPackageNames": [
        "node",
        "openjdk",
        "eclipse-temurin",
        "amazoncorretto",
        "maven",
        "gradle"
      ],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "groupName": "Base Docker images",
      "matchDatasources": ["docker"],
      "matchManagers": ["dockerfile"],
      "excludePackageNames": [
        "node",
        "openjdk",
        "eclipse-temurin",
        "amazoncorretto",
        "maven",
        "gradle",
        "postgres",
        "mysql",
        "mariadb",
        "mongo",
        "redis",
        "nginx",
        "rabbitmq"
      ],
      "minimumReleaseAge": "3 days",
      "separateMinorPatch": true,
      "automerge": false
    },
    {
      "groupName": "Tooling Docker images",
      "matchDatasources": ["docker"],
      "matchManagers": ["dockerfile"],
      "matchPackageNames": [
        "node",
        "openjdk",
        "eclipse-temurin",
        "amazoncorretto",
        "maven",
        "gradle"
      ],
      "automerge": false
    },
    {
      "matchDatasources": ["docker"],
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update"]
    },
    {
      // Runtime images are infrastructure: never automerge (overrides generic automerge rules above)
      "groupName": "Runtime Docker images",
      "matchDatasources": ["docker"],
      "matchManagers": ["dockerfile"],
      "matchPackageNames": [
        "postgres",
        "mysql",
        "mariadb",
        "mongo",
        "redis",
        "nginx",
        "rabbitmq"
      ],
      "automerge": false
    }
  ]
}
