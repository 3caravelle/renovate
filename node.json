{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Vue/Nuxt ecosystem",
      "matchManagers": ["npm"],
      "matchPackagePatterns": [
        "^(vue|vue-router|vue-i18n|@vue/|@vueuse/)",
        "^(nuxt|@nuxt/)",
        "^(pinia|@pinia/)",
        "^(vite|@vitejs/)"
      ],
      "automerge": false
    },
    {
      "groupName": "NestJS ecosystem",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^@nestjs/"],
      "automerge": false
    },
    {
      "groupName": "TypeScript toolchain",
      "matchManagers": ["npm"],
      "matchPackagePatterns": [
        "^typescript$",
        "^tsx$",
        "^ts-node$",
        "^@types/",
        "^@swc/",
        "^swc",
        "^ts-jest$"
      ],
      "automerge": false
    },
    {
      "groupName": "Lint & formatting",
      "matchManagers": ["npm"],
      "matchPackagePatterns": [
        "^eslint",
        "^@eslint/",
        "^@typescript-eslint/",
        "^prettier$"
      ],
      "automerge": false
    }
  ]
}
